<div class="instagramblock top-space">
{% set sliderFor = 6 %}
{% set imageCount = item %}
{% set i = 0 %}
<div class="h1 products-section-title text-uppercase"><!-- <i class="fa fa-instagram" aria-hidden="true"></i> -->{{ heading_title }}</div>
<ul class="list-unstyled">
<div id="{% if imageCount >= sliderFor %}image-carousel{% else %} image-grid{% endif %}">

  {% for image in images %} 
  	{% if i < imageCount %}
		{% if imageCount >= sliderFor %}
			 <div class="blog-items col-lg-12 col-md-12 col-sm-12 col-xs-12">
		{% else %}
			 <div class="blog-items col-lg-2 col-md-4 col-sm-4 col-xs-12">
		{% endif %}
			{% if (image['link']) %} 
				<a href="{{image['link']}}"><img src="{{image['image']}}" alt="{{image['title']}}"class="img-responsive" height="{{ width }}" width="{{ width }}" />			</a>
			{% else %} 
				<img src="{{image['image']}}" alt="{{image['title'] }}"class="img-responsive" height="{{ width }}" width="{{ width }}" />
				{% endif %} 
			</div>
			{% set i = i + 1 %}
	{% endif %} 
  {% endfor %} 
</div>
</div>
</ul>
</div>
